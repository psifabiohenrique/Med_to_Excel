<Start@ScreenManager>:
    Screen1:
    Chooser_Archive:
    Chooser_Sieve:

<Screen1>:
    name: 'screen1'

    BoxLayout:
        
        BoxLayout:
            padding: 100
            spacing: 30
            orientation: 'vertical'
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Escolha o arquivo MedPC'
                    on_release: root.manager.current ='choose_archive' 
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Escolha o crivo'
                    on_release: root.manager.current = 'choose_sieve'
            BoxLayout:
                ToggleButton:
                    size_hint: None, None
                    pos_hint: {'center_x': 1, 'center_y': 1}
                    height: 20
                    width: 20
                    on_state: app.column_or_row(self)
                Label:
                    pos_hint: {'center_x': 1, 'center_y': 1}
                    text: 'Dados na mesma linha?'
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Copy'
                    on_release: app.copy()
                Label:
                    id: label_copy
                    text: app.label_copy 
        Label:
            padding: 30, 30
            halign: 'justify'
            valign: 'center'
            text_size: self.size
            font_size: 20
            text: """Olá, bem vindo ao Med to Excel.\n\n\n Este programa foi desenvolvido para importação dos dados do MedPC para o Excel.\n\n Selecione no botão superior o arquivo do MedPC onde os dados estão salvos e selecione no botão intermediário o crivo.\n\n Este programa foi desenvolvido por Fábio Henrique, para mais informações acesse: https://github.com/psifabiohenrique/Med_to_Excel"""

<Chooser_Archive>:

    name: 'choose_archive'
    BoxLayout:
        padding: 30
        spacing: 30
        orientation: 'vertical'
        Label:
            size_hint: 1, .1
            font_size: 30
            text: 'Escolha o arquivo do MedPC'
        FileChooserIconView:
            id: file_chooser_archive
            path: './'
        BoxLayout:
            size_hint: 1, .1
            Button:
                text: 'Select'
                on_press: app.load_archive(file_chooser_archive.path, file_chooser_archive.selection)
                on_release: root.manager.current = 'screen1'
            Button:
                text: 'Back'
                on_press: root.manager.current = 'screen1'

<Chooser_Sieve>:
    name: 'choose_sieve'
    BoxLayout:
        padding: 30
        spacing: 30
        orientation: 'vertical'
        Label:
            size_hint: 1, .1
            font_size: 30
            text: 'Escolha o crivo'
        FileChooserIconView:
            id: file_chooser_sieve
            path: './'
        BoxLayout:
            size_hint: 1, .1
            Button:
                text: 'Select'
                on_press: app.load_sieve(file_chooser_sieve.path, file_chooser_sieve.selection)
                on_release: root.manager.current = 'screen1'
            Button:
                text: 'Back'
                on_release: root.manager.current = 'screen1'


Start:
